@model List<NewCourseViewModel>
    @{
    ViewData["Title"] = "ManageNewCourses";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    }

    <div class="container-fluid my-4">
        <div class="row">
            <!-- Manage New Courses Section -->
            <div class="card mb-4">
                <div class="card-header bg-danger text-white d-flex justify-content-between align-items-center">
                    <h4>Manage New Courses</h4>
                    <div class="dropdown">
                        <button class="btn btn-warning dropdown-toggle" type="button" id="filterType"
                                data-bs-toggle="dropdown" aria-expanded="false">
                            Filter: Type
                        </button>
                        <ul class="dropdown-menu" aria-labelledby="filterType">
                            <li><a class="dropdown-item" href="#">Type 1</a></li>
                            <li><a class="dropdown-item" href="#">Type 2</a></li>
                        </ul>
                    </div>
                </div>
                <div class="card-body">
                    <table class="table table-bordered">
                        <thead class="table-warning">
                            <tr>
                                <th>ID</th>
                                <th>Name</th>
                                <th>Type</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var course in Model)
                        {
                            <tr>
                                <td>@course.CourseId</td>
                                <td>@course.Name</td>
                                <td>@course.Type</td>
                                <td>
                                    <!-- View Course Details -->
                                    <a href="@Url.Action("DetailsCourse", "Admin", new { courseId = course.CourseId })" class="btn btn-info btn-sm">Details</a>

                                    <!-- Approve Course -->
                                    <form action="@Url.Action("ApproveCourse", "Admin", new { courseId = course.CourseId })" method="post" style="display:inline;">
                                        <button type="submit" class="btn btn-success btn-sm">Approve</button>
                                    </form>

                                    <!-- Reject Course -->
                                    <form action="@Url.Action("RejectCourse", "Admin", new { courseId = course.CourseId })" method="post" style="display:inline;">
                                        <button type="submit" class="btn btn-danger btn-sm">Reject</button>
                                    </form>
                                </td>
                            </tr>
                        }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
