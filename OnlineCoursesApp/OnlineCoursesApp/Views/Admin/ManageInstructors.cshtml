@{
    ViewData["Title"] = "ManageInstructors";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="container-fluid my-4">
    <div class="row">
        <!-- Manage Instructors Section -->
        <div class="card mb-4">
            <div class="card-header bg-warning text-white d-flex justify-content-between align-items-center">
                <h4>Manage Instructors</h4>
                <!-- Create Instructor Button -->
                <a href="@Url.Action("CreateInstructor", "Admin")" class="btn btn-primary">
                    + Create New Instructor
                </a>
            </div>
            <div class="card-body">
                <table class="table table-bordered">
                    <thead class="table-warning">
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var instructor in Model)
                        {
                        <tr>
                            <td>@instructor.InstructorId</td>
                            <td>@instructor.Name</td>
                            <td>
                                <!-- View Instructor Details -->
                                <a href="@Url.Action("DetailsInstructor", "Admin", new { instructorId = instructor.InstructorId })" class="btn btn-info btn-sm">Details</a>

                                <!-- Edit Instructor -->
                                <a href="@Url.Action("EditInstructor", "Admin", new { instructorId = instructor.InstructorId })" class="btn btn-warning btn-sm">Edit</a>

                                <!-- Delete Instructor -->
                                <form action="@Url.Action("DeleteInstructor", "Admin", new { instructorId = instructor.InstructorId })" method="post" style="display:inline;">
                                    <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this instructor?');">Delete</button>
                                </form>
                            </td>
                        </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
