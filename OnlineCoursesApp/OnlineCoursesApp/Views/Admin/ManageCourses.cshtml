@model List<ManageCoursesViewModel>
    @{
    ViewData["Title"] = "ManageCourses";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    }

    <div class="container-fluid my-4">
        <div class="row">
            <!-- Manage Courses Section -->
            <div class="card mb-4">
                <div class="card-header  text-white d-flex justify-content-between align-items-center" style="background-color: #ed9c00;">
                    <h4>Manage Courses</h4>
                    <div>
                        <!-- Create Course Button -->
                        <a href="@Url.Action("CreateCourse", "Admin")" class="btn btn-primary">
                            + Create New Course
                        </a>
                        <!-- Dropdown Filter (Optional) -->
                        <div class="dropdown d-inline">
                            <button class="btn btn-warning dropdown-toggle" type="button" id="filterType"
                                    data-bs-toggle="dropdown" aria-expanded="false">
                                Filter: Type
                            </button>
                            <ul class="dropdown-menu" aria-labelledby="filterType">
                                <li><a class="dropdown-item" href="#">Type 1</a></li>
                                <li><a class="dropdown-item" href="#">Type 2</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <!-- Courses Table -->
                    <table class="table table-bordered">
                        <thead class="table-warning">
                            <tr>
                                <th>ID</th>
                                <th>Name</th>
                                <th>Type</th>
                                <th>Student Number</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var course in Model)
                        {
                            <tr>
                                <td>@course.CourseId</td>
                                <td>@course.Name</td>
                                <td>@course.Type</td>
                                <td>@course.StudentNumber</td>
                                <td>
                                    <!-- View Course Details -->
                                    <a href="@Url.Action("Details", "Admin", new { courseId = course.CourseId })" class="btn btn-info btn-sm">Details</a>

                                    <!-- Edit Course -->
                                    <a href="@Url.Action("EditCourse", "Admin", new { courseId = course.CourseId })" class="btn btn-warning btn-sm">Edit</a>

                                    <!-- Delete Course -->
                                    <form action="@Url.Action("DeleteCourse", "Admin", new { courseId = course.CourseId })" method="post" style="display:inline;">
                                        <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this course?');">Delete</button>
                                    </form>

                                    <!-- Optional: Approve/Reject Course (If needed for your logic) -->
                                    <a href="#" class="btn btn-success btn-sm">Approve</a>
                                    <a href="#" class="btn btn-danger btn-sm">Reject</a>
                                </td>
                            </tr>
                        }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
